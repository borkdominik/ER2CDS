{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "ES6",
      "DOM"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "out",
    "node_modules"
  ]
}