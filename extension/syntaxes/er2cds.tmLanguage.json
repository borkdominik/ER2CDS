{
  "name": "er2cds",
  "scopeName": "source.er2cds",
  "fileTypes": [
    ".er2cds"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.er2cds",
      "match": "\\b(0\\.\\.N|alias|as|association|association-to-parent|composition|entity|er2cds|join|key|no-out|order|relationship|where)\\b"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.er2cds",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.er2cds"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.er2cds"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.er2cds"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.er2cds"
        }
      ]
    }
  }
}
