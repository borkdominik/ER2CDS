{
  "name": "er2cds",
  "scopeName": "source.er2cds",
  "fileTypes": [
    ".er2cds"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.er2cds",
      "match": "\\b(0\\.\\.N|1\\.\\.N|N|derived|entity|er2cds|extends|key|multivalued|none|optional|package|partial-key|private|protected|public|relationship|weak)\\b|\\B(-o)\\b|\\b(o-)\\B"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.er2cds",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.er2cds"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.er2cds"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.er2cds"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.er2cds"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.er2cds",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
