{
  "name": "er2cds",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "er2cds",
        "aliases": [
          "er2cds",
          "er2cds"
        ],
        "extensions": [
          ".er2cds"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "er2cds",
        "scopeName": "source.er2cds",
        "path": "./syntaxes/er2cds.tmLanguage.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "er2cds",
        "displayName": "ER2CDS Editor",
        "selector": [
          {
            "filenamePattern": "*.er2cds"
          }
        ],
        "priority": "option"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "er2cds-container",
          "title": "ER2CDS",
          "icon": "$(symbol-structure)"
        }
      ]
    },
    "views": {
      "er2cds-container": [
        {
          "id": "er2cds",
          "type": "webview",
          "name": "ER2CDS"
        }
      ]
    },
    "commands": [
      {
        "command": "er2cds.diagram.open",
        "title": "Open in Diagram",
        "icon": "$(symbol-structure)",
        "category": "ER2CDS Diagram"
      },
      {
        "command": "er2cds.diagram.fit",
        "title": "Fit to Screen",
        "category": "ER2CDS Diagram"
      },
      {
        "command": "er2cds.diagram.center",
        "title": "Center selection",
        "category": "ER2CDS Diagram"
      },
      {
        "command": "er2cds.diagram.delete",
        "title": "Delete selected element",
        "category": "ER2CDS Diagram"
      },
      {
        "command": "er2cds.diagram.export",
        "title": "Export diagram to SVG",
        "category": "ER2CDS Diagram"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "er2cds.diagram.open",
          "when": "editorLangId == 'er2cds'"
        },
        {
          "command": "er2cds.diagram.fit",
          "when": "states-diagram-focused"
        },
        {
          "command": "er2cds.diagram.center",
          "when": "states-diagram-focused"
        },
        {
          "command": "er2cds.diagram.delete",
          "when": "states-diagram-focused"
        },
        {
          "command": "er2cds.diagram.export",
          "when": "states-diagram-focused"
        }
      ],
      "editor/context": [
        {
          "command": "er2cds.diagram.open",
          "when": "editorLangId == 'er2cds'",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "er2cds.diagram.open",
          "when": "editorLangId == 'er2cds'",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "er2cds.diagram.open",
          "when": "resourceExtname == '.er2cds'",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {
    "sprotty-vscode": "^1.0.0",
    "sprotty-vscode-webview": "^1.0.0",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/vscode": "^1.86.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "clean": "rm -rf out",
    "build": "tsc -b"
  }
}
