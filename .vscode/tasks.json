{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ER2CDS",
            "dependsOn": [
                "Extension Build",
                "Language Server Build"
            ]
        },
        {
            "label": "Extension Build",
            "command": "tsc",
            "args": [
                "-b"
            ],
            "options": {
                "cwd": "${workspaceFolder}/extension"
            }
        },
        {
            "label": "Language Server Build",
            "command": "tsc",
            "args": [
                "-b"
            ],
            "options": {
                "cwd": "${workspaceFolder}/language-server"
            }
        }
    ]
}